{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'menu.item.edit.info'|trans({}, 'menu')|raw }}
	</div>
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'menu.item.form.title.edit'|trans({}, 'menu') }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'menu.item.form.title.edit'|trans({}, 'menu') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	{% if form %}
		<form action="{{ path('armn_menu_item_edit', { 'id': menu.id, 'itemId': item.id }) }}" method="post" class="form-horizontal">
			{{ form_widget(form) }}
			<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
    		    	<input class="btn btn-primary" type="submit" value="{{ 'default.form.action.update'|trans }}"/>
    		    	<input class="btn" type="reset" value="{{ 'default.form.action.reset'|trans }}"/>
    		    	<a  class="btn" href="{{ path('armn_menu', {'id': menu.id}) }}">{{ 'default.form.action.back_to_list'|trans }}</a>
    		    </div>
		    </div>
		</form>
	{% endif%}
{% endblock %}
